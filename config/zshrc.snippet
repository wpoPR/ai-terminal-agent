# Add ~/bin to PATH if not already present
if [[ ":$PATH:" != *":$HOME/bin:"* ]]; then
  export PATH="$HOME/bin:$PATH"
fi

# Aliases (optional)
alias ais='ai-status'
alias air='ai-recent'
alias aih='ai-health-check'
alias aiu='ai-update'

